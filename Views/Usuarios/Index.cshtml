@model IEnumerable<SisDoBem.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/usuarios.css" />

<div class="page-container">

    <h2 class="page-title">Lista de Usuários</h2>

    <a href="@Url.Action("Create")" class="btn-add">+ Novo Usuário</a>

    <table class="custom-table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Documento</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Endereço</th>
                <th>Data de Cadastro</th>
                <th>Tipo</th>
                <th>Status</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Documento</td>
                    <td>@item.Email</td>
                    <td>@item.Telefone</td>
                    <td>@item.Endereco</td>
                    <td>@item.DataDeCadastro.ToString("dd/MM/yyyy")</td>
                    <td>@item.TipoDeUsuario</td>
                    <td>@item.Status</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="action-btn action-edit">Editar</a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="action-btn action-delete">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
