@model SisDoBem.Models.LoginViewModel

<div class="account-wrapper">
    <div class="account-card">

        <h2 class="text-center mb-4">Entrar</h2>

        <!-- Botões sociais (visuais) -->
        <button type="button" class="social-btn" onclick="location.href='#'">
            <img src="https://img.icons8.com/color/48/google-logo.png" class="social-icon" />
            Entrar com Google
        </button>

        <button type="button" class="social-btn" onclick="location.href='#'">
            <img src="https://img.icons8.com/ios-filled/50/mac-os.png" class="social-icon" />
            Entrar com Apple
        </button>

        <div class="divider"><span>ou</span></div>

        <form asp-action="Login" method="post" novalidate>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Senha</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Entrar</button>

            <p class="text-center mt-3">
                Não tem conta?
                <a asp-controller="Account" asp-action="Register">Criar conta</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


