<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SisDoBem</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- CSS do projeto -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/form-pages.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cadastros.css" asp-append-version="true" />

</head>

<body>

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg shadow-sm main-navbar">
            <div class="container">

                <a class="navbar-brand fw-bold text-white" asp-controller="Home" asp-action="Index">
                    SisDoBem
                </a>

                <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="navbarNav" class="collapse navbar-collapse">

                    <!-- Menu Esquerda -->
                    <ul class="navbar-nav me-auto">

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <!-- MENU CADASTROS AJUSTADO -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="cadastrosDropdown" role="button" data-bs-toggle="dropdown">
                                Cadastros
                            </a>
                            <ul class="dropdown-menu">

                                <!-- DOADORES -->
                                <li class="dropdown-header">Doadores</li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Usuarios"
                                       asp-action="Index"
                                       asp-route-tipo="DoadorCpf">
                                        Doador (Pessoa Física)
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Usuarios"
                                       asp-action="Index"
                                       asp-route-tipo="DoadorCnpj">
                                        Doador (Pessoa Jurídica)
                                    </a>
                                </li>

                                <li><hr class="dropdown-divider" /></li>

                                <!-- DONATÁRIOS -->
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Usuarios"
                                       asp-action="Index"
                                       asp-route-tipo="Donatario">
                                        Donatários
                                    </a>
                                </li>

                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Estoques" asp-action="Index">Estoques</a>
                        </li>
                    </ul>

                    <!-- Menu Direita -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Login</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Account" asp-action="Register">Registrar</a>
                        </li>
                    </ul>

                </div>
            </div>

            <!-- Botão de alternar tema -->
            <div class="theme-toggle">
                <button id="themeSwitcher" class="btn btn-outline-light btn-sm">
                    <span id="themeIcon">🌙</span>
                </button>
            </div>

        </nav>
    </header>

    <!-- CONTEÚDO PRINCIPAL -->
    <main class="container my-4 flex-grow-1">
        @RenderBody()
    </main>

    <!-- RODAPÉ -->
    <footer class="footer-custom text-white text-center py-3">
        &copy; 2025 - SisDoBem | Desenvolvido com ❤️
    </footer>

    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Tema (claro/escuro) -->
    <script>
        const root = document.documentElement;
        const switchBtn = document.getElementById("themeSwitcher");
        const icon = document.getElementById("themeIcon");

        const savedTheme = localStorage.getItem("theme");
        if (savedTheme) {
            root.setAttribute("data-theme", savedTheme);
            icon.textContent = savedTheme === "dark" ? "☀️" : "🌙";
        }

        switchBtn.addEventListener("click", () => {
            const current = root.getAttribute("data-theme") || "light";
            const next = current === "light" ? "dark" : "light";
            root.setAttribute("data-theme", next);
            localStorage.setItem("theme", next);
            icon.textContent = next === "dark" ? "☀️" : "🌙";
        });
    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>

